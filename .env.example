# Deterministic seeds + endpoints for real-inference runs
GEMANTRIA_SEED=20251024
PYTHONHASHSEED=20251024
API_HOST=localhost
API_PORT=8000
LM_CHAT_HOST=localhost
LM_CHAT_PORT=9991
LM_EMBED_HOST=localhost
LM_EMBED_PORT=9994

# === MCP SSE Server (LM Studio bridge) ===
# Auto-start MCP SSE server on port 8005 when needed (e.g., during bringup.001)
# Set to 1 to enable automatic startup, 0 to require manual start
AUTO_START_MCP_SSE=0

# --- Database (Phase-1) ---
# Read-only upstream scripture DB (app-layer enforces RO)
BIBLE_DSN=postgres://bible_ro:password@localhost:5432/bible_db
# Read-write target for gematria schema
GEMATRIA_DSN=postgres://gematria_rw:password@localhost:5432/gemantria

# === Prompt Logging ===
# Enable prompt archiving to prompts/run_<timestamp>.jsonl for reproducibility and debugging
ENABLE_PROMPT_LOGGING=0

# === OpenTelemetry (optional; local/tags only) ===
# Enable lightweight tracing (root/agent/tool spans). Default off for CI/hermetic runs.
ENABLE_OTEL=0
# Optional OTLP endpoint (leave blank to use JSONL fallback exporter under evidence/).
OTEL_EXPORTER_OTLP_ENDPOINT=
# Logical service name seen in tracing backends.
OTEL_SERVICE_NAME=gemantria
OTEL_RESOURCE_ATTRIBUTES=project=gemantria,env=dev
