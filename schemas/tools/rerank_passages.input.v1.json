{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gemantria://v1/tools/rerank_passages.input.v1.json",
  "type": "object",
  "required": [
    "schema_version",
    "query",
    "candidates",
    "top_k"
  ],
  "properties": {
    "schema_version": {
      "const": "1.0.0"
    },
    "seed": {
      "type": "integer",
      "minimum": 0
    },
    "model": {
      "enum": [
        "mxbai-rerank-large-v1",
        "bge-reranker-v2-base"
      ]
    },
    "query": {
      "type": "string",
      "minLength": 3
    },
    "candidates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "text"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "meta": {
            "type": "object"
          }
        },
        "additionalProperties": false
      }
    },
    "top_k": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    }
  },
  "additionalProperties": false,
  "title": "Rerank_Passages Input V1"
}