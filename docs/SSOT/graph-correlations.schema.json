{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gemantria.ai/schema/graph-correlations",
  "title": "Graph Correlations Export Schema",
  "description": "Schema for validating pattern correlation exports from the semantic network",
  "type": "object",
  "properties": {
    "correlations": {
      "type": "array",
      "description": "Array of correlation records between concepts, clusters, or patterns",
      "items": {
        "type": "object",
        "required": [
          "source",
          "target",
          "correlation",
          "p_value",
          "metric",
          "cluster_source",
          "cluster_target"
        ],
        "properties": {
          "source": {
            "type": "string",
            "description": "Source concept identifier (content_hash or concept_id)"
          },
          "target": {
            "type": "string",
            "description": "Target concept identifier (content_hash or concept_id)"
          },
          "correlation": {
            "type": "number",
            "minimum": -1,
            "maximum": 1,
            "description": "Pearson correlation coefficient (-1 to 1)"
          },
          "p_value": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Statistical significance p-value (0 to 1)"
          },
          "metric": {
            "type": "string",
            "enum": [
              "gematria_values",
              "semantic_similarity",
              "text_cooccurrence",
              "cluster_proximity",
              "centrality_correlation"
            ],
            "description": "Type of correlation analysis performed"
          },
          "cluster_source": {
            "type": ["integer", "null"],
            "description": "Cluster ID of the source concept, null if unclustered"
          },
          "cluster_target": {
            "type": ["integer", "null"],
            "description": "Cluster ID of the target concept, null if unclustered"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Optional confidence score for the correlation"
          },
          "sample_size": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of data points used in correlation calculation"
          },
          "cooccurrence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Text co-occurrence frequency score (0-1)"
          }
        },
        "additionalProperties": false
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "total_correlations": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of correlations found"
        },
        "significant_correlations": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of correlations with p_value < 0.05"
        },
        "correlation_methods": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "gematria_values",
              "semantic_similarity",
              "text_cooccurrence",
              "cluster_proximity",
              "centrality_correlation"
            ]
          },
          "description": "Types of correlation analysis performed"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when correlations were calculated"
        },
        "run_id": {
          "type": "string",
          "description": "Pipeline run ID that generated these correlations"
        }
      },
      "required": [
        "total_correlations",
        "significant_correlations",
        "correlation_methods",
        "generated_at"
      ]
    }
  },
  "required": ["correlations", "metadata"]
}
