{
  "schema": "atlas_dashboard",
  "version": "1.0",
  "title": "LM Studio Health (7d)",
  "description": "Language Model health metrics over the last 7 days",
  "data_source": "share/atlas/control_plane/lm_health_7d.json",
  "panels": [
    {
      "id": "connection_status",
      "type": "status",
      "title": "Connection Status",
      "field": "connection_ok",
      "ok_label": "Connected",
      "fail_label": "Disconnected"
    },
    {
      "id": "health_score",
      "type": "gauge",
      "title": "Health Score",
      "field": "health_score",
      "min": 0,
      "max": 1,
      "format": "percent"
    },
    {
      "id": "success_rate",
      "type": "metric",
      "title": "Success Rate",
      "field": "success_rate",
      "format": "percent"
    },
    {
      "id": "error_rate",
      "type": "metric",
      "title": "Error Rate",
      "field": "error_rate",
      "format": "percent"
    },
    {
      "id": "error_types",
      "type": "pie",
      "title": "Error Types",
      "field": "error_types"
    },
    {
      "id": "recent_errors",
      "type": "table",
      "title": "Recent Errors",
      "field": "recent_errors",
      "columns": ["timestamp", "type", "message"]
    }
  ],
  "db_off_safe": true,
  "db_off_message": "No LM health metrics available (database is currently offline / db_off)."
}

